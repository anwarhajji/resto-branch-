---
const { color = "dark-brown", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
  color?: "red" | "dark-brown";
  title?: string;
}

const colors = {
  red: "bg-brand-red/5 text-brand-red ring-1 ring-brand-red",
  "dark-brown": "bg-[#5C4033]/5 text-[#5C4033] ring-1 ring-[#5C4033]", // Marron fonc√©
  "light-brown": "bg-[#A67B5B]/5 text-[#A67B5B] ring-1 ring-[#A67B5B]", // Marron clair
};
---

<span
  class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-base font-semibold ${colors[color]}`}
  >{title}</span
>
