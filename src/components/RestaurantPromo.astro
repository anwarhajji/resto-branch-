---
// RestaurantPromo.astro
import { Picture } from "astro:assets";
import HeroImage from "../assets/images/HOM1.jpg"; // Update path to your image
import GroupImage from "../assets/images/HOM2.jpg"; // Update path to your image
---

<div class="font-sans text-white overflow-hidden">
  <!-- Section Hero en pleine largeur -->
  <section class="relative w-full h-96 md:h-screen overflow-hidden">
    <!-- Image Hero avec composant Picture -->
    <div class="absolute inset-0 z-0">
      <Picture
        class:list={"w-full h-full object-cover"}
        src={HeroImage}
        widths={[400, 800, 1200, 1600, 2000]}
        sizes="100vw"
        height={600}
        formats={["avif", "webp"]}
        alt="Cuisine australienne moderne magnifiquement présentée"
        loading={"eager"}
        fetchpriority={"high"}
      />
    </div>

    <!-- Contenu superposé -->
    <div
      class="relative z-10 flex items-center justify-center h-full text-center px-8 bg-black/30"
    >
      <div>
        <h1 class="text-4xl md:text-5xl font-light mb-8">Welcome to Branché</h1>
        <a
          href="#"
          class="inline-block py-3 px-8 border-2 border-white rounded-full text-white no-underline text-base transition-all duration-300 hover:bg-white/20"
          >Book now</a
        >
      </div>
    </div>
  </section>

  <!-- Section groupe en pleine largeur -->
  <section class="bg-gray-800 py-8 px-4 text-center w-full">
    <h2 class="text-2xl font-bold mb-6">
      Your Brunch Haven in the Heart of Leyton
    </h2>

    <!-- <div class="mx-auto mb-6 w-full max-w-5xl overflow-hidden rounded-lg"> -->
    <div class="flex justify-center mb-6">
      <div class="w-[400px] h-[200px] overflow-hidden rounded-3xl">
        <!-- Added rounded-lg here -->
        <Picture
          class="w-full h-full object-cover"
          src={GroupImage}
          widths={[400, 800, 1200, 1600]}
          sizes="(max-width: 1200px) 100vw, 1200px"
          formats={["avif", "webp"]}
          alt="Table pour un grand groupe avec plusieurs plats à partager"
          loading="lazy"
        />
      </div>
    </div>

    <div class="mx-auto mb-6 max-w-xl md:max-w-2xl">
      <p class="leading-relaxed text-base">
        At Branché, we bring the warmth and charm of the South of France to your
        table. Our cafe is a celebration of fresh, seasonal ingredients,
        thoughtfully prepared dishes, and a welcoming atmosphere that feels like
        home. Whether you’re here for a leisurely brunch, a quick coffee, or a
        moment of calm, we invite you to savor the simple joys of good food and
        great company..
      </p>
    </div>

    <a
      href="#"
      class="inline-block py-4 px-6 bg-transparent border-2 border-white rounded-full text-white no-underline text-base mt-4 transition-all duration-300 hover:bg-white/20"
      >Large Group Booking Enquiry</a
    >
  </section>
</div>
