---
import Layout from "../layouts/Layout.astro";
---

<Layout title="MENU" pageTitle="MENU" description="Our restaurant MENU!">
  <main
    class="flex flex-col items-center justify-center min-h-screen bg-gray-100 px-4"
  >
    <h2 class="text-4xl font-bold mb-12 text-center">📋 Choose a Menu</h2>

    <div class="flex flex-col md:flex-row gap-6">
      <!-- Leyton Menu Button -->
      <a
        href="https://anwarhajji.github.io/pdf-hosting/Brunch%20Menu.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-WHITE-600 hover:bg-BLACK-200 text-Black text-xl font-semibold px-8 py-4 rounded-lg shadow transition"
      >
        📍 View Leyton Menu
      </a>

      <!-- Leyton 2 Menu Button -->
      <a
        href="https://anwarhajji.github.io/pdf-hosting/Brunch%20Menu.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-WHITE-600 hover:bg-WHITE-700 text-Black text-xl font-semibold px-8 py-4 rounded-lg shadow transition"
      >
        📍 View Leyton 2 Menu
      </a>
    </div>
  </main>
</Layout>
